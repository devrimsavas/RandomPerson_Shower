<!DOCTYPE html>
<html>
  <head>
    <%- include('partials/header.ejs') -%>
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <hr>



    <div class="container-fluid " name="menu" id="menu">
      <div class="row">
        <div class="col-2">
          <button class="btn btn-primary" type="button" id="getUser" onclick="getUser()">Get User</button>
        </div>
        <div class="col-2">
          <input class="form-control" type="number" id="howMany" placeholder="How many?">
        </div>
      </div>      
    </div><hr>


    <div class="container-fluid bordered" name="table-container" id="table-container">
      <div class="row">
        <div class="col-8">  <!-- Fixed missing quote here -->
    
          <div class="responsive-table" id="usertable">
            <table class="table table-striped table-bordered">
              <thead class="table-dark">
                <tr>
                  <th>Photo</th>
                  <th>First Name</th>
                  <th>Last Name</th>
                  <th>Email</th>
                </tr>
              </thead>
              <tbody id="userData">
                <!--user data will be inserted here-->          
              </tbody>
            </table>      
          </div>
          <hr>
    
        </div>
        <div class="col-4 bordered">
          <!-- Additional content here if needed -->
          <div class="card bordered" id="user-card" style="width: 22rem;" id="name-info">
              <!-- Updated to use correct CSS for centering an image -->
              <div id="photo" style="display: flex; justify-content: center; align-items: center;">
                  <img class="p-3" src="images/blank.webp" style="width:250px; height:250px;" alt="User Thumbnail">
              </div>
              <div class="card-body bg-info">
                  <h3 id="name">name: </h3>
                  <p id="email">email: </p>
                  <button class="btn btn-primary" id="close" onclick="closeCard()">Close Card</button>
              </div>
          </div>
      </div>
      </div>
    </div>


    
  


    <script>

    </script>
  </body>
</html>
